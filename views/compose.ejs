<%- include('partials/header'); -%>

    <div class="content">
        <div class="sec pb-5">
            <h2>Write a new Journal</h2>
            <form action="/new" method="post">
                <div class="mb-3">
                    <label  class="form-label"><h5>Title</h5></label>
                    <input type="text" class="form-control field" placeholder="Type whatever you want..." name="postTitle" required>
                </div>
                <div class="mb-3">
                    <label  class="form-label"><h5>Post</h5></label>
                    <textarea class="form-control field" rows="4" placeholder="Write what's on your mind..." name="postBody" required></textarea>
                </div>
                <button type="submit" name="button" class="btn mt-2 create-btn">Publish</button>
            </form>
        </div>
    </div>
    
    

<%- include('partials/footer'); -%>